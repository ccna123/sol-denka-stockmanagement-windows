<UserControl x:Class="sol_denka_stockmanagement.Views.Dialogs.MaterialSearchDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sol_denka_stockmanagement.Views.Dialogs"
             mc:Ignorable="d" 
             Background="LightGray"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="450" d:DesignWidth="500">

    <Grid Margin="15" Focusable="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"  Text="検索条件" FontWeight="Bold" FontSize="20"  VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,10"/>

        <!-- EPC -->
        <Grid Grid.Row="1" Width="450" Margin="0,10,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="9*"/>
                </Grid.ColumnDefinitions>

                <TextBlock 
                    Text="EPC" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="20"/>
                <Border 
                    Grid.Column="2"
                    CornerRadius="4"
                    Padding="8,4"
                    BorderBrush="#B0B0B0"
                    BorderThickness="1"
                    Margin="0,0,10,0">
                    <TextBox 
                        x:Name="EpcBox"
                        materialDesign:HintAssist.Hint="EPCを入力"
                        BorderThickness="0"
                        VerticalAlignment="Center"
                        FontSize="14"/>
                </Border>
            </Grid>
        </Grid>

        <!-- アイテム名 -->
        <Grid Grid.Row="2" Width="450" Margin="0,10,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="9*"/>
                </Grid.ColumnDefinitions>

                <TextBlock 
                    Text="アイテム名" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="20"/>
                <Border 
                    Grid.Column="2"
                    CornerRadius="4"
                    Padding="8,4"
                    BorderBrush="#B0B0B0"
                    BorderThickness="1"
                    Margin="0,0,10,0">
                    <TextBox 
                        x:Name="ItemNameBox"
                        materialDesign:HintAssist.Hint="アイテム名を入力"
                        BorderThickness="0"
                        VerticalAlignment="Center"
                        FontSize="14"/>
                </Border>
            </Grid>
        </Grid>

        <!-- 保管場所 -->
        <Grid Grid.Row="3" Width="450" Margin="0,10,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="9*"/>
                </Grid.ColumnDefinitions>

                <TextBlock 
                    Text="保管場所" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="20"/>
                <Border 
                    Grid.Column="2"
                    materialDesign:HintAssist.Hint="保管場所を選択"
                    CornerRadius="4"
                    Padding="8,4"
                    BorderBrush="#B0B0B0"
                    BorderThickness="1"
                    Margin="0,0,10,0">
                    <ComboBox x:Name="StorageBox" Margin="0,5,0,10" >
                        <ComboBoxItem Content="保管場所A"/>
                        <ComboBoxItem Content="保管場所B"/>
                        <ComboBoxItem Content="保管場所C"/>
                    </ComboBox>
                </Border>
            </Grid>
        </Grid>

        <!-- 更新日時 -->
        <Grid Grid.Row="4" Width="500" Margin="0,10,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>

                <TextBlock 
                    Text="更新日時" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"/>
                <Border 
                    Grid.Column="2"
                    materialDesign:HintAssist.Hint="日時を選択"
                    CornerRadius="4"
                    Padding="8,4"
                    BorderBrush="#B0B0B0"
                    BorderThickness="1"
                    Margin="10,0,10,0">
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <DatePicker x:Name="StartDatePicker" Width="140"/>
                    </StackPanel>
                </Border>
                <TextBlock 
                    Text="~"
                    Grid.Column="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"/>
                <Border 
                    Grid.Column="4"
                    materialDesign:HintAssist.Hint="日時を選択"
                    CornerRadius="4"
                    Padding="8,4"
                    BorderBrush="#B0B0B0"
                    BorderThickness="1"
                    Margin="10,0,10,0">
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <DatePicker x:Name="EndDatePicker" Width="140"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- 発生日時 -->
        <Grid Grid.Row="5" Width="500" Margin="0,10,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>

                <TextBlock 
                    Text="発生日時" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"/>
                <Border 
                    Grid.Column="2"
                    materialDesign:HintAssist.Hint="日時を選択"
                    CornerRadius="4"
                    Padding="8,4"
                    BorderBrush="#B0B0B0"
                    BorderThickness="1"
                    Margin="10,0,10,0">
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <DatePicker x:Name="StartDatePicker2" Width="140"/>
                    </StackPanel>
                </Border>
                <TextBlock 
                    Text="~"
                    Grid.Column="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"/>
                <Border 
                    Grid.Column="4"
                    materialDesign:HintAssist.Hint="日時を選択"
                    CornerRadius="4"
                    Padding="8,4"
                    BorderBrush="#B0B0B0"
                    BorderThickness="1"
                    Margin="10,0,10,0">
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <DatePicker x:Name="EndDatePicker2" Width="140"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- 検索ボタン -->
        <Button Grid.Row="6" Content="検索" Width="100" Height="30"
                HorizontalAlignment="Center"
                Click="SearchButton_Click"/>
    </Grid>
</UserControl>
