<UserControl x:Class="sol_denka_stockmanagement.Views.Dialogs.StockSearchDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sol_denka_stockmanagement.Views.Dialogs"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             Background="LightGray"
             d:DesignHeight="300" d:DesignWidth="500">
    <Grid Margin="15" Focusable="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"  Text="検索条件" FontWeight="Bold" FontSize="20"  VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,10"/>

        <!-- 品目コード -->
        <Grid Grid.Row="1" Width="450" Margin="0,10,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="9*"/>
                </Grid.ColumnDefinitions>

                <TextBlock 
                Text="品目コード" 
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="20"/>
                <Border 
                Grid.Column="2"
                CornerRadius="4"
                Padding="8,4"
                BorderBrush="#B0B0B0"
                BorderThickness="1"
                Margin="0,0,10,0">
                    <TextBox 
                    x:Name="ItemBox"
                    materialDesign:HintAssist.Hint="品目コードを入力"
                    BorderThickness="0"
                    VerticalAlignment="Center"
                    FontSize="14"/>
                </Border>
            </Grid>
        </Grid>

        <!-- 資材名 -->
        <Grid Grid.Row="2" Width="450" Margin="0,10,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="9*"/>
                </Grid.ColumnDefinitions>

                <TextBlock 
                Text="資材名" 
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="20"/>
                <Border 
                Grid.Column="2"
                CornerRadius="4"
                Padding="8,4"
                BorderBrush="#B0B0B0"
                BorderThickness="1"
                Margin="0,0,10,0">
                    <TextBox 
                    x:Name="Item2Box"
                    materialDesign:HintAssist.Hint="資材名を入力"
                    BorderThickness="0"
                    VerticalAlignment="Center"
                    FontSize="14"/>
                </Border>
            </Grid>
        </Grid>

        <!-- Lot No -->
        <Grid Grid.Row="3" Width="450" Margin="0,10,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="9*"/>
                </Grid.ColumnDefinitions>

                <TextBlock 
                Text="Lot No" 
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="20"/>
                <Border 
                Grid.Column="2"
                materialDesign:HintAssist.Hint="Lot Noを選択"
                CornerRadius="4"
                Padding="8,4"
                BorderBrush="#B0B0B0"
                BorderThickness="1"
                Margin="0,0,10,0">
                    <TextBox 
                    x:Name="Item3Box"
                    BorderThickness="0"
                    VerticalAlignment="Center"
                    FontSize="14"/>
                </Border>
            </Grid>
        </Grid>

        <!-- 検索ボタン -->
        <Button Grid.Row="6" Content="検索" Width="100" Height="30"
            HorizontalAlignment="Center"
            Click="SearchButton_Click"/>
    </Grid>
</UserControl>
