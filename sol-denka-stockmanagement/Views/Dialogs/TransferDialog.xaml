<UserControl x:Class="sol_denka_stockmanagement.Views.Dialogs.TransferDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sol_denka_stockmanagement.Views.Dialogs"
             mc:Ignorable="d" 
             Width="500"
             Height="300"
             Background="Transparent">

    <Border Background="White"
            CornerRadius="10"
            BorderBrush="#DDDDDD"
            BorderThickness="1">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 中央テキスト -->
            <TextBlock Text="転送が完了しました"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontWeight="Bold"
                       Grid.Row="0"/>

            <!-- 閉じるボタン -->
            <Button Content="閉じる"
                    Width="100"
                    Margin="0,10,0,20"
                    HorizontalAlignment="Center"
                    Click="CloseButton_Click"
                    Grid.Row="1"/>
        </Grid>
    </Border>
</UserControl>