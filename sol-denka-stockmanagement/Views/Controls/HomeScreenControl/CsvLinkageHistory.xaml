<UserControl x:Class="sol_denka_stockmanagement.Views.Controls.HomeScreenControl.CsvLinkageHistory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sol_denka_stockmanagement.Views.Controls.HomeScreenControl"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="200" d:DesignWidth="600">

    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.15*"/>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="0.15*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="20,0,0,0">
                <TextBlock
                    FontSize="20"
                    VerticalAlignment="Center"
                    Text="CSV連携履歴" />
            </Grid>

            <Grid Grid.Row="1" Margin="5">
                <ListView 
                    Margin="10"
                    Grid.Row="1" 
                    x:Name="CsvLinkageList" 
                    HorizontalAlignment="Stretch"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    SizeChanged="listView_SizeChanged"
                    BorderThickness="0">
                    <ListView.Resources>
                        <!-- 灰色のヘッダースタイル -->
                        <Style x:Key="GrayHeaderStyle" TargetType="GridViewColumnHeader">
                            <Setter Property="Background" Value="LightGray"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </ListView.Resources>

                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="日時" DisplayMemberBinding="{Binding DateTime}" HeaderContainerStyle="{StaticResource GrayHeaderStyle}"/>
                            <GridViewColumn Header="種別" DisplayMemberBinding="{Binding Type}" HeaderContainerStyle="{StaticResource GrayHeaderStyle}" />
                            <GridViewColumn Header="CSVファイル名" DisplayMemberBinding="{Binding CsvName}" HeaderContainerStyle="{StaticResource GrayHeaderStyle}"/>
                            <GridViewColumn Header="状態" DisplayMemberBinding="{Binding Condition}" HeaderContainerStyle="{StaticResource GrayHeaderStyle}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>

            <Grid Grid.Row="2" Margin="20,0,0,3">
                <Button
                    Content="CSV連携へ移動"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Stretch"
                    Padding="10,5"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="move_click">
                </Button>
            </Grid>

        </Grid>
    </Border>
</UserControl>
