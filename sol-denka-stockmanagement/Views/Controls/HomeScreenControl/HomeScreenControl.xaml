<UserControl x:Class="sol_denka_stockmanagement.Views.Controls.HomeScreenControl.HomeScreenControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sol_denka_stockmanagement.Views.Controls.HomeScreenControl"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="640">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.9*"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="Gray" BorderThickness="0,0,0,1">
            <Grid Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="40,0,0,0">
                <TextBlock 
                Text="Home（ダッシュボード）"
                FontSize="20"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.22*"/>
                <RowDefinition Height="0.38*"/>
                <RowDefinition Height="0.38*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.33*"/>
                    <ColumnDefinition Width="0.33*"/>
                    <ColumnDefinition Width="0.33*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Margin="20">
                    <local:MaterialType x:Name="MaterialType"/>
                </Grid>

                <Grid Grid.Column="1" Margin="20">
                    <local:TotalInventory x:Name="TotalInventory"/>
                </Grid>

                <Grid Grid.Column="2" Margin="20">
                    <local:LatestDataImport x:Name="LatestDataImport"/>
                </Grid>
            </Grid>

            <Grid Grid.Row="1" Margin="50,20,50,20">
                <local:LedgerEvent x:Name="LedgeEvent"/>
            </Grid>

            <Grid Grid.Row="2" Margin="50,20,50,20">
                <local:CsvLinkageHistory x:Name="CsvLinkageHistory"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
