<UserControl x:Class="sol_denka_stockmanagement.Views.Controls.HomeScreenControl.LatestDataImport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sol_denka_stockmanagement.Views.Controls.HomeScreenControl"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="150" d:DesignWidth="215">
    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="20">
        <Grid Margin="20,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.5*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left">
                <TextBlock 
                    Text="最新データ取り込み"
                    FontSize="20"/>
            </Grid>

            <Grid Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left">
                <TextBlock x:Name="LatestImportDateText" FontSize="30">
                    <TextBlock.RenderTransform>
                        <TranslateTransform Y="-10"/>
                    </TextBlock.RenderTransform>
                </TextBlock>

            </Grid>
        </Grid>
    </Border>
</UserControl>
