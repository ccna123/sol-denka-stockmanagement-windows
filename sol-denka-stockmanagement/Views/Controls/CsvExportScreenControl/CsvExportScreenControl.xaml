<UserControl x:Class="sol_denka_stockmanagement.Views.Controls.CsvExportScreenControl.CsvExportScreenControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sol_denka_stockmanagement.Views.Controls.CsvExportScreenControl"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="640">

    <UserControl.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="110"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#888"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="6"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <!-- マウスオーバー -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D0E8FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.9*"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="Gray" BorderThickness="0,0,0,1">
            <Grid Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="40,0,0,0">
                <TextBlock 
                Text="CSV出力"
                FontSize="20"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- タイトル -->
            <TextBlock Text="出力ファイル選択"
                   FontWeight="Bold"
                   FontSize="20"
                   Grid.Row="0"
                   Margin="0 0 0 10"/>

            <!-- チェックボックス -->
            <StackPanel Orientation="Vertical" Grid.Row="1">

                <Grid Margin="0 8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- チェック本体：中央揃え -->
                    <CheckBox x:Name="ItemMasterCheckBox" VerticalAlignment="Center"/>

                    <!-- テキスト：中央揃え -->
                    <TextBlock Text="品目マスタ"
                        FontSize="20"
                        VerticalAlignment="Center"
                        Margin="5 0 0 0"
                        Grid.Column="1"/>
                </Grid>

                <Grid Margin="0 8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <CheckBox x:Name="ItemSettingMasterCheckBox" VerticalAlignment="Center"/>
                    <TextBlock Text="品目項目設定マスタ"
                        FontSize="20"
                        VerticalAlignment="Center"
                        Margin="5 0 0 0"
                        Grid.Column="1"/>
                </Grid>

                <Grid Margin="0 8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <CheckBox x:Name="StorageMasterCheckBox" VerticalAlignment="Center"/>
                    <TextBlock Text="保管場所マスタ"
                        FontSize="20"
                        VerticalAlignment="Center"
                        Margin="5 0 0 0"
                        Grid.Column="1"/>
                </Grid>

                <Grid Margin="0 8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <CheckBox x:Name="TagMasterCheckBox" VerticalAlignment="Center"/>
                    <TextBlock Text="タグマスタ"
                        FontSize="20"
                        VerticalAlignment="Center"
                        Margin="5 0 0 0"
                        Grid.Column="1"/>
                </Grid>

                <Grid Margin="0 8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <CheckBox x:Name="LedgerMasterCheckBox" VerticalAlignment="Center"/>
                    <TextBlock Text="台帳マスタ"
                        FontSize="20"
                        VerticalAlignment="Center"
                        Margin="5 0 0 0"
                        Grid.Column="1"/>
                </Grid>
            </StackPanel>

            <!-- 出力ボタン（右下） -->
            <Button
                x:Name="Button"
                Content="出力"
                Width="60" Height="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Grid.Row="2"
                Margin="0 10 50 0"
                Click="Check_button"/>
        </Grid>
    </Grid>
</UserControl>
