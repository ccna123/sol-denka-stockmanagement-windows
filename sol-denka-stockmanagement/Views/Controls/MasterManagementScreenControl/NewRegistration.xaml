<UserControl x:Class="sol_denka_stockmanagement.Views.Controls.MasterManagementScreenControl.NewRegistration"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sol_denka_stockmanagement.Views.Controls.MasterManagementScreenControl"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="640">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.9*"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="Gray" BorderThickness="0,0,0,1">
            <Grid Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="40,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="0.7*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Margin="0,0,10,0">
                    <Button 
                        x:Name="BackButton"
                        Content="←"
                        FontSize="20"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="BackPage_Click"
                        BorderBrush="White"
                        materialDesign:ShadowAssist.ShadowAnimationDuration="0"/>
                </Grid>
                <Grid Grid.Column="2">
                    <TextBlock 
                        Text="マスタ管理画面・新規登録"
                        FontSize="20"/>
                </Grid>
            </Grid>
        </Border>

        <Grid Margin="20" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.9*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <!-- 品目＆項目マスタの場合 -->
                <Grid Grid.Row="0" x:Name="ItemRegistration" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="0,0,20,0">
                        <TextBlock Text="基本情報" FontSize="20" FontWeight="Bold" Margin="0,0,0,40"/>

                        <TextBlock Text="品目名"/>
                        <TextBox x:Name="ItemNameBox" materialDesign:HintAssist.Hint="品目入力" />

                        <TextBlock Text="品目コード" Margin="0,20,0,0"/>
                        <TextBox  x:Name="ItemCodeBox" materialDesign:HintAssist.Hint="品目コード入力"/>

                        <TextBlock Text="区分" Margin="0,20,0,0"/>
                        <ComboBox x:Name="CategoryConboBox" materialDesign:HintAssist.Hint="区分選択"
                            DisplayMemberPath="Item_category_name"
                            SelectedValuePath="Item_category_id"/>

                        <TextBlock Text="数量単位" Margin="0,20,0,0"/>
                        <ComboBox x:Name="CountUnitComboBox" materialDesign:HintAssist.Hint="数量単位選択"
                            DisplayMemberPath="Code"
                            SelectedValuePath="Id"
                            Height="30"/>

                        <TextBlock Text="重量単位" Margin="0,20,0,0"/>
                        <ComboBox x:Name="WightUnitComboBox" materialDesign:HintAssist.Hint="重量単位選択"
                            DisplayMemberPath="Code"
                            SelectedValuePath="Id"
                            Height="30"/>

                        <TextBlock Text="グレード" Margin="0,20,0,0"/>
                        <TextBox x:Name="GradeBox" materialDesign:HintAssist.Hint="グレード入力"/>

                        <TextBlock Text="比重" Margin="0,20,0,0"/>
                        <TextBox x:Name="SpecificGravityBox" materialDesign:HintAssist.Hint="比重入力"/>

                        <TextBlock Text="荷姿" Margin="0,20,0,0"/>
                        <TextBox x:Name="PackingStyleBox" materialDesign:HintAssist.Hint="荷姿入力"/>

                        <TextBlock Text="備考" Margin="0,20,0,0"/>
                        <TextBox x:Name="ItemMemoBox" TextWrapping="Wrap" AcceptsReturn="True" materialDesign:HintAssist.Hint="備考入力"/>
                    </StackPanel>

                    <!-- 右側：入庫時入力項目 -->
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <!-- ListViewなど -->
                            <RowDefinition Height="Auto"/>
                            <!-- ボタン領域 -->
                        </Grid.RowDefinitions>

                        <!-- 上：タイトル + ListView -->
                        <StackPanel Grid.Row="0">
                            <TextBlock Text="入庫時に入力する可変情報" FontSize="20" FontWeight="Bold"/>
                            <TextBlock Text="Android入庫画面に表示するフィールドを設定" FontSize="17" Margin="0,0,0,15"/>

                            <!-- ListView -->
                            <ListView x:Name="listView" ItemsSource="{Binding _ReceiptItem}" 
                                SizeChanged="listView_SizeChanged" 
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListView.Resources>
                                    <Style TargetType="{x:Type GridViewColumnHeader}">
                                        <Setter Property="Background" Value="LightGray"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </ListView.Resources>
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="フィールド名" DisplayMemberBinding="{Binding Name}" />
                                        <GridViewColumn Header="表示設定">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <CheckBox IsChecked="{Binding 表示}"/>
                                                        <TextBlock Text="表示する" FontSize="17" Margin="5,0,0,0"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn Header="入力設定">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            Visibility="{Binding 表示, Converter={StaticResource BoolToVis}}">
                                                        <RadioButton x:Name="any_btn" Content="任意" FontSize="17"
                                                GroupName="{Binding Name}"
                                                IsChecked="{Binding 任意}"/>
                                                        <RadioButton x:Name="required_btn" Content="必須" Margin="20,0,0,0" FontSize="17"
                                                GroupName="{Binding Name}"
                                                IsChecked="{Binding 必須}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </StackPanel>
                    </Grid>
                </Grid>

                <!-- 保管場所マスタの場合 -->
                <Grid x:Name="LocationRegistration" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="0,0,20,0">
                        <TextBlock Text="基本情報" FontSize="20" FontWeight="Bold" Margin="0,0,0,40"/>

                        <TextBlock Text="保管場所名"/>
                        <TextBox x:Name="LocationNameBox" materialDesign:HintAssist.Hint="保管場所名入力" />

                        <TextBlock Text="保管場所コード" Margin="0,20,0,0"/>
                        <TextBox  x:Name="LocationCodeBox" materialDesign:HintAssist.Hint="保管場所コード入力"/>

                        <TextBlock Text="備考" Margin="0,20,0,0"/>
                        <TextBox x:Name="LocationMemoBox" TextWrapping="Wrap" AcceptsReturn="True" materialDesign:HintAssist.Hint="備考入力"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="1">
                    <StackPanel
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="0,20,0,0">
                        <Button Content="登録" Margin="10,0" Click="Register_Click"/>
                        <Button Content="キャンセル" Click="Cancel_Click"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
