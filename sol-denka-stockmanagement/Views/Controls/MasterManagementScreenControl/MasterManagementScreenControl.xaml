<UserControl x:Class="sol_denka_stockmanagement.Views.Controls.MasterManagementScreenControl.MasterManagementScreenControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sol_denka_stockmanagement.Views.Controls.MasterManagementScreenControl"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="640">

    <UserControl.Resources>
        <DataTemplate x:Key="DetailButtonTemplate">
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Button 
                    x:Name="Button"
                        Content="編集"
                        Width="70"
                        Background="White"
                        Click="DetailButton_Click"/>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.9*"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="Gray" BorderThickness="0,0,0,1">
            <Grid Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="40,0,0,0">
                <TextBlock 
                Text="マスタ管理"
                FontSize="20"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.8*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="0.5*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="マスタ選択" FontSize="20" FontWeight="Bold"/>
                <Button x:Name="RegistrationButton"
                        Content="新規登録"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Width="90" Grid.Row="0" HorizontalAlignment="Right" Click="Registration_Click"/>
                <ComboBox Grid.Row="1" x:Name="comboBox" SelectionChanged="ComboBox_SelectionChanged" Width="180" HorizontalAlignment="Left">
                    <ComboBoxItem Content="マスタ種類選択" IsEnabled="False"/>
                    <ComboBoxItem Content="品目マスタ＋項目設定マスタ" />
                    <ComboBoxItem Content="保管場所マスタ" />
                    <ComboBoxItem Content="タグマスタ" />
                </ComboBox>
            </Grid>
            <!-- ListView は最初非表示 -->
            <ListView x:Name="listView"
                      Grid.Row="1"
                      Margin="10"
                      SizeChanged="listView_SizeChanged"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.Resources>
                    <!-- ヘッダーの背景色を変更 -->
                    <Style TargetType="{x:Type GridViewColumnHeader}">
                        <Setter Property="Background" Value="LightGray"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                    </Style>
                </ListView.Resources>
            </ListView>
        </Grid>
    </Grid>
</UserControl>
