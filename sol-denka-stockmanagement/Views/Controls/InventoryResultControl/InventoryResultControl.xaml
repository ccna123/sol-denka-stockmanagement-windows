<UserControl x:Class="sol_denka_stockmanagement.Views.Controls.InventoryResultControl.InventoryResultControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sol_denka_stockmanagement.Views.Controls.InventoryResultControl"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="640">
    <UserControl.Resources>
        <Style x:Key="PagingButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#888"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="6"
                             Background="{TemplateBinding Background}"
                             BorderBrush="{TemplateBinding BorderBrush}"
                             BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <!-- マウスオーバー -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D0E8FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="110"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#888"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="6"
                             Background="{TemplateBinding Background}"
                             BorderBrush="{TemplateBinding BorderBrush}"
                             BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <!-- マウスオーバー -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D0E8FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RoundedComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border"
                             CornerRadius="6"
                             BorderBrush="#999"
                             BorderThickness="1"
                             Background="White" />

                            <DockPanel>
                                <ContentPresenter Margin="6,0"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                                <!-- ▼ ボタン -->
                                <Path x:Name="Arrow"
                               Width="12" Height="12"
                               Margin="4"
                               VerticalAlignment="Center"
                               Fill="#555"
                               Data="M 0 0 L 10 0 L 5 5 Z" />
                            </DockPanel>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#666"/>
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.9*"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="Gray" BorderThickness="0,0,0,1">
            <Grid Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="40,0,0,0">
                <TextBlock 
             Text="棚卸結果一覧画面"
             FontSize="20"/>
            </Grid>
        </Border>
        <Grid Grid.Row="1">
            <StackPanel Margin="10">
                <Button
                 x:Name="SearchButton"
                 Content="検索条件変更"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Stretch"
                 Padding="10,5"
                 Click="OpenSearchDialogButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border 
                             Background="{TemplateBinding Background}" 
                             BorderBrush="{TemplateBinding BorderBrush}" 
                             BorderThickness="{TemplateBinding BorderThickness}" 
                             CornerRadius="5">
                                <ContentPresenter 
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <StackPanel Orientation="Horizontal" Margin="10">
                    <StackPanel x:Name="pagePanel" Orientation="Horizontal" HorizontalAlignment="Left"/>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                        <TextBlock VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox   
                     x:Name="pageSizeCombo"
                     Width="60"
                     SelectionChanged="PageSizeCombo_SelectionChanged">
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="20"/>
                            <ComboBoxItem Content="50"/>
                            <ComboBoxItem Content="100"/>
                        </ComboBox>

                    </StackPanel>
                </StackPanel>

                <!-- リスト -->
                <ListView x:Name="listView" HorizontalAlignment="Stretch"
                       BorderThickness="0"
                       ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                       ScrollViewer.VerticalScrollBarVisibility="Auto"
                       SizeChanged="listView_SizeChanged">

                    <ListView.Resources>
                        <!-- 灰色のヘッダースタイル -->
                        <Style x:Key="GrayHeaderStyle" TargetType="GridViewColumnHeader">
                            <Setter Property="Background" Value="LightGray"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>

                        <!-- 白色のヘッダースタイル -->
                        <Style x:Key="WhiteHeaderStyle" TargetType="GridViewColumnHeader">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </ListView.Resources>

                    <ListView.View>
                        <GridView>

                            <GridViewColumn Header="保管場所"
                         DisplayMemberBinding="{Binding Location_name}"
                         HeaderContainerStyle="{StaticResource GrayHeaderStyle}" />

                            <GridViewColumn Header="品目数"
                         DisplayMemberBinding="{Binding Item_number}"
                         HeaderContainerStyle="{StaticResource GrayHeaderStyle}" />

                            <GridViewColumn Header="登録アイテム数"
                         DisplayMemberBinding="{Binding RegistrationItem}"
                         HeaderContainerStyle="{StaticResource GrayHeaderStyle}" />

                            <GridViewColumn Header="スキャン数"
                         DisplayMemberBinding="{Binding Scan}"
                         HeaderContainerStyle="{StaticResource GrayHeaderStyle}" />

                            <GridViewColumn Header="差異"
                         DisplayMemberBinding="{Binding difference}"
                         HeaderContainerStyle="{StaticResource GrayHeaderStyle}" />

                            <GridViewColumn Header="ステータス"
                         DisplayMemberBinding="{Binding Status}"
                         HeaderContainerStyle="{StaticResource GrayHeaderStyle}" />

                            <GridViewColumn Header="実施場所"
                         DisplayMemberBinding="{Binding Updated_at}"
                         HeaderContainerStyle="{StaticResource GrayHeaderStyle}" />

                            <!-- 右 6（白色） -->
                            <GridViewColumn Header=""
                         HeaderContainerStyle="{StaticResource WhiteHeaderStyle}">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="詳細"
                                         Width="60" Height="24"
                                         Background="White"
                                         Command="{Binding DataContext.DetailCommand,
                                         RelativeSource={RelativeSource AncestorType=ListView}}"
                                         CommandParameter="{Binding}"
                                         Click="DetailButton_Click"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
