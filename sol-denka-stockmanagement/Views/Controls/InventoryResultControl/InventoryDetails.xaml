<UserControl x:Class="sol_denka_stockmanagement.Views.Controls.InventoryResultControl.InventoryDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sol_denka_stockmanagement.Views.Controls.InventoryResultControl"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="640">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.9*"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="Gray" BorderThickness="0,0,0,1">
            <Grid Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="40,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="0.7*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Margin="0,0,10,0">
                    <Button 
                        x:Name="BackButton"
                        Content="←"
                        FontSize="20"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="BackPage_Click"
                        BorderBrush="White"/>
                </Grid>
                <Grid Grid.Column="2">
                    <TextBlock 
                Text="棚卸詳細"
                FontSize="20"/>
                </Grid>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="10">
                <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="5">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="40,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.2*"/>
                                <ColumnDefinition Width="0.8*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" HorizontalAlignment="Left">
                                <TextBlock Text="保管場所：" FontSize="20"/>
                            </Grid>
                            <Grid Grid.Column="1" HorizontalAlignment="Left">
                                <TextBlock Text="保管場所A" FontSize="20"/>
                            </Grid>
                        </Grid>

                        <Grid Grid.Row="1" Margin="40,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.2*"/>
                                <ColumnDefinition Width="0.8*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" HorizontalAlignment="Left">
                                <TextBlock Text="実施日時：" FontSize="20"/>
                            </Grid>
                            <Grid Grid.Column="1" HorizontalAlignment="Left">
                                <TextBlock Text="2025/11/01 11:00:50" FontSize="20"/>
                            </Grid>
                        </Grid>

                        <Grid Grid.Row="2" Margin="40,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.2*"/>
                                <ColumnDefinition Width="0.8*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" HorizontalAlignment="Left">
                                <TextBlock Text="確認ステータス：" FontSize="20"/>
                            </Grid>
                            <Grid Grid.Column="1" HorizontalAlignment="Left">
                                <TextBlock Text="未確認" FontSize="20"/>
                            </Grid>
                        </Grid>

                        <Grid Grid.Row="3" Margin="40,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.2*"/>
                                <ColumnDefinition Width="0.8*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" HorizontalAlignment="Left">
                                <TextBlock Text="自動適用ステータス：" FontSize="20"/>
                            </Grid>
                            <Grid Grid.Column="1" HorizontalAlignment="Left">
                                <TextBlock Text="未適用" FontSize="20"/>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Row="1" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.25*"/>
                    <ColumnDefinition Width="0.25*"/>
                    <ColumnDefinition Width="0.25*"/>
                    <ColumnDefinition Width="0.25*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Margin="15,0,0,0">
                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5">
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.5*"/>
                                <RowDefinition Height="0.5*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="一致" FontSize="20" Grid.Row="0" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                            <TextBlock Text="38" FontSize="20" Grid.Row="1" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Grid>

                <Grid Grid.Column="1" Margin="10,0,0,0">
                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5">
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.5*"/>
                                <RowDefinition Height="0.5*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="不足" FontSize="20" Grid.Row="0" HorizontalAlignment="Center"/>
                            <TextBlock Text="2" FontSize="20" Grid.Row="1" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Grid>

                <Grid Grid.Column="2" Margin="10,0,0,0">
                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5">
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.5*"/>
                                <RowDefinition Height="0.5*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="余剰" FontSize="20" Grid.Row="0" HorizontalAlignment="Center"/>
                            <TextBlock Text="0" FontSize="20" Grid.Row="1" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Grid>

                <Grid Grid.Column="3" Margin="10,0,0,0">
                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5">
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.5*"/>
                                <RowDefinition Height="0.5*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="保管場所不一致" FontSize="20" Grid.Row="0" HorizontalAlignment="Center"/>
                            <TextBlock Text="0" FontSize="20" Grid.Row="1" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <Grid Grid.Row="2" Margin="10" Background="LightYellow">
                <TextBlock Text="棚卸差異が検出されました。" FontSize="20" Margin="30,0,0,0"/>
                <TextBlock Text="2つのアイテムが見つかりました。" FontSize="20" Margin="30,20,0,0"/>
            </Grid>

            <!-- タグボタンとリスト -->
                <Grid Grid.Row="3">
                <StackPanel Margin="10">
                    <Border BorderThickness="1" BorderBrush="Gray" Margin="0,0,0,10" CornerRadius="5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                            <Button x:Name="BtnList1" Content="正常一致" Width="110" Margin="5" Click="List1_Click"/>
                            <Button x:Name="BtnList2" Content="不足(未検出)" Width="110" Margin="5" Click="List2_Click"/>
                            <Button x:Name="BtnList3" Content="余剰" Width="110" Margin="5" Click="List3_Click"/>
                            <Button x:Name="BtnList4" Content="保管場所不一致" Width="130" Margin="5" Click="List4_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- リスト -->
                    <ListView x:Name="MainList" HorizontalAlignment="Stretch"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        SizeChanged="listView_SizeChanged"
                        BorderThickness="0">
                        <ListView.Resources>
                            <!-- 灰色のヘッダースタイル -->
                            <Style x:Key="GrayHeaderStyle" TargetType="GridViewColumnHeader">
                                <Setter Property="Background" Value="LightGray"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </ListView.Resources>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="アイテムコード" DisplayMemberBinding="{Binding Item_name}" HeaderContainerStyle="{StaticResource GrayHeaderStyle}"/>
                                <GridViewColumn Header="品目コード" DisplayMemberBinding="{Binding Material_code}" HeaderContainerStyle="{StaticResource GrayHeaderStyle}" />
                                <GridViewColumn Header="品目名" DisplayMemberBinding="{Binding Material_name}" HeaderContainerStyle="{StaticResource GrayHeaderStyle}" />
                                <GridViewColumn Header="ステータス" DisplayMemberBinding="{Binding Status}" HeaderContainerStyle="{StaticResource GrayHeaderStyle}" />
                                <GridViewColumn Header="スキャン日時" DisplayMemberBinding="{Binding Scan_at}" HeaderContainerStyle="{StaticResource GrayHeaderStyle}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>

</UserControl>
