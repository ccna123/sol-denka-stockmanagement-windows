<UserControl x:Class="sol_denka_stockmanagement.Views.Controls.MaterialLedgerScreenControl.TagDetails_Edit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sol_denka_stockmanagement.Views.Controls.MaterialLedgerScreenControl"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="640">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.9*"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="Gray" BorderThickness="0,0,0,1">
            <Grid Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="40,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="0.7*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Margin="0,0,10,0">
                    <Button 
                    x:Name="BackButton"
                    Content="←"
                    FontSize="20"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="BackPage_Click"
                    BorderBrush="White"
                    materialDesign:ShadowAssist.ShadowAnimationDuration="0"/>
                </Grid>
                <Grid Grid.Column="2">
                    <TextBlock 
                        Text="資材台帳詳細"
                        FontSize="20"/>
                </Grid>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
    <Grid Margin="10">
        <TabControl>
            
            <!-- 基本情報タブ -->
            <TabItem Header="基本情報" >
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="3*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="1" Text="アイテムコード" FontSize="20" VerticalAlignment="Center"/>
                    <Border 
                        Grid.Row="1"
                        Grid.Column="1"
                        Background="#FFFFFF"
                        CornerRadius="4"
                        Padding="8,4"
                        BorderBrush="#B0B0B0"
                        BorderThickness="1"
                        Margin="0,0,10,0">
                        <TextBox      
                            Text="25000001"
                            VerticalAlignment="Center"
                            FontSize="14"/>
                    </Border>

                    <TextBlock Grid.Row="1" Grid.Column="2" Text="厚み" FontSize="20" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <Border 
                        Grid.Row="1"
                        Grid.Column="3"
                        Background="#FFFFFF"
                        CornerRadius="4"
                        Padding="8,4"
                        BorderBrush="#B0B0B0"
                        BorderThickness="1"
                        Margin="0,0,10,0">
                        <TextBox      
                            Text="30"
                            VerticalAlignment="Center"
                            FontSize="14"/>
                    </Border>

                    <TextBlock Grid.Row="3" Text="長さ" FontSize="20" VerticalAlignment="Center"/>
                    <Border 
                        Grid.Row="3"
                        Grid.Column="1"
                        Background="#FFFFFF"
                        CornerRadius="4"
                        Padding="8,4"
                        BorderBrush="#B0B0B0"
                        BorderThickness="1"
                        Margin="0,0,10,0">
                        <TextBox      
                            Text="100"
                            VerticalAlignment="Center"
                            FontSize="14"/>
                    </Border>

                    <TextBlock Grid.Row="3" Grid.Column="2" Text="巻き取り機情報" FontSize="20" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <Border 
                        Grid.Row="3"
                        Grid.Column="3"
                        Background="#FFFFFF"
                        CornerRadius="4"
                        Padding="8,4"
                        BorderBrush="#B0B0B0"
                        BorderThickness="1"
                        Margin="0,0,10,0">
                        <TextBox      
                            Text="巻き取り機A"
                            VerticalAlignment="Center"
                            FontSize="14"/>
                    </Border>

                    <TextBlock Grid.Row="5" Text="保管場所" FontSize="20" VerticalAlignment="Center" />
                    <Border 
                        Grid.Row="5"
                        Grid.Column="1"
                        Background="#FFFFFF"
                        CornerRadius="4"
                        Padding="8,4"
                        BorderBrush="#B0B0B0"
                        BorderThickness="1"
                        Margin="0,0,10,0">
                        <TextBox      
                            Text="保管場所"
                            VerticalAlignment="Center"
                        FontSize="14"/>
                    </Border>

                    <TextBlock Grid.Row="5" Grid.Column="2" Text="荷姿" FontSize="20" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <Border 
                        Grid.Row="5"
                        Grid.Column="3"
                        Background="#FFFFFF"
                        CornerRadius="4"
                        Padding="8,4"
                        BorderBrush="#B0B0B0"
                        BorderThickness="1"
                        Margin="0,0,10,0">
                        <TextBox      
                            Text="回収反"
                            VerticalAlignment="Center"
                            FontSize="14"/>
                    </Border>

                    <TextBlock Grid.Row="7" Text="区分" FontSize="20" VerticalAlignment="Center"/>
                    <Border 
                        Grid.Row="7"
                        Grid.Column="1"
                        Background="#FFFFFF"
                        CornerRadius="4"
                        Padding="8,4"
                        BorderBrush="#B0B0B0"
                        BorderThickness="1"
                        Margin="0,0,10,0">
                        <TextBox      
                            Text="半製品"
                            VerticalAlignment="Center"
                            FontSize="14"/>
                    </Border>
                    <Grid Grid.Row="9" Grid.Column="4" Margin="0,0,15,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="0.6*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <Button
                                Grid.Column="1"
                                Height="40"
                                Width="80"
                                Content="登録"
                                FontSize="14"
                                Background="White"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Click="Check_button"/>

                            <Button
                                Margin="10,0,0,0"
                                Grid.Column="2"
                                Height="40"
                                Width="90"
                                Content="キャンセル"
                                FontSize="14"
                                Background="White"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Click="BackPage_Click"/>
                                </Grid>
                            </Grid>
                        </Grid>

            </TabItem>

            <!-- 操作履歴タブ -->
            <TabItem Header="操作履歴">
                <Grid Margin="10">
                    <ListView 
                        Margin="10"
                        x:Name="listView" 
                        HorizontalAlignment="Stretch"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        SizeChanged="listView_SizeChanged"
                        BorderThickness="0">
                        <ListView.Resources>
                            <!-- 灰色のヘッダースタイル -->
                            <Style x:Key="GrayHeaderStyle" TargetType="GridViewColumnHeader">
                                <Setter Property="Background" Value="LightGray"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </ListView.Resources>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="イベント日時" DisplayMemberBinding="{Binding occurred_at}" HeaderContainerStyle="{StaticResource GrayHeaderStyle}"/>
                                <GridViewColumn Header="イベント" DisplayMemberBinding="{Binding ledger_item_id}" HeaderContainerStyle="{StaticResource GrayHeaderStyle}"/>
                                <GridViewColumn Header="保管場所" DisplayMemberBinding="{Binding location}" HeaderContainerStyle="{StaticResource GrayHeaderStyle}"/>
                                <GridViewColumn Header="操作内容" DisplayMemberBinding="{Binding tag_action_id}" HeaderContainerStyle="{StaticResource GrayHeaderStyle}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Grid>
    </Grid>
</UserControl>
